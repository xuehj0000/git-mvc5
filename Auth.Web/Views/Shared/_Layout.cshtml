<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/plugins/css")
    @Styles.Render("~/layout/css")
</head>
<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">
    @Html.Partial("Header")
    <div class="page-container">
        @Html.Partial("SideMenu")
        <div class="page-content-wrapper">
            <div class="page-content">
                @Html.Partial("PageHeader")
                @RenderBody();
                @Html.Partial("Modal")
            </div>
        </div>
    </div>
    @Html.Partial("Footer")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        @{ 
            var crumbsId = new List<string>() { "0", "0" };
            var crubbsList = (List<string>)Context.Session["CurrentMenu"];
            if(crubbsList!= null && crubbsList.Count() > 0)
            {
                crumbsId = crubbsList;
            }
        }
        $(function () {
            InitSelectMenu('@crumbsId[1]', '@crumbsId[0]');

        })

        function FoldMenue(e) {
            if ($(e).hasClass("open")) {
                $(e).removeClass("open");
                var ul = $(e).find("ul");
                $(ul).attr("style", "display:block;");
            } else {
                $(e).addClass("open");
                var ul = $(e).find("ul");
                $(ul).attr("style", "display:none;");
            }
        }


    </script>
</body>
</html>
